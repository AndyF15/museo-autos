    .lemans-card:hover { border-color: #10b981; box-shadow: 0 0 30px rgba(16, 185, 129, 0.4); }

    /* Reflejo debajo de la tarjeta */
    .glass {
        position: relative;
        transition: all 0.5s ease;
    }
    
    .glass::after {
        content: "";
        position: absolute;
        bottom: -20px;
        left: 0;
        right: 0;
        height: 40px;
        background: linear-gradient(to bottom, rgba(255,255,255,0.1), transparent);
        transform: perspective(100px) rotateX(60deg);
        filter: blur(8px);
        opacity: 0;
        transition: opacity 0.5s;
    }

    .glass:hover::after {
        opacity: 1;
    }
      .glass img {
         filter: grayscale(30%);
         /* Un toque elegante */
      }

      .glass:hover img {
         filter: grayscale(0%) brightness(110%);
      }

      .glass {
         background: rgba(255, 255, 255, 0.05);
         backdrop-filter: blur(10px);
         border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .jdm-card:hover {
